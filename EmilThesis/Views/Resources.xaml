<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls">
    <Style x:Key="CommonPropertyStyle" TargetType="{x:Type FrameworkElement}">
        <Setter Property="Margin" Value="5"/>
    </Style>
    <Style x:Key="LabelPropertyStyle"
           BasedOn="{StaticResource CommonPropertyStyle}" TargetType="{x:Type Label}">
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="FontSize" Value="16"/>
    </Style>
    <Style x:Key="NumericUpDownPropertyStyle"
           BasedOn="{StaticResource CommonPropertyStyle}" TargetType="{x:Type mah:NumericUpDown}">
        <Setter Property="Minimum" Value="0"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="FontSize" Value="16"/>
    </Style>
</ResourceDictionary>